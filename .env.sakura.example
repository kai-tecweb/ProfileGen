APP_NAME=ProfileGen
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Tokyo
APP_URL=https://your-domain.sakura.ne.jp

# セッション設定（さくらサーバー推奨）
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ログ設定
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# データベース設定（さくらサーバー用）
# 注意: DB_HOSTは「mysql**.db.sakura.ne.jp」の形式です
# さくらサーバーのコントロールパネルで確認してください
DB_CONNECTION=mysql
DB_HOST=mysql**.db.sakura.ne.jp
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# メール設定（さくらサーバー用SMTP）
# さくらサーバーのメール設定を使用する場合
MAIL_MAILER=smtp
MAIL_HOST=mail.sakura.ne.jp
MAIL_PORT=587
MAIL_USERNAME=your_email@your-domain.sakura.ne.jp
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.sakura.ne.jp"
MAIL_FROM_NAME="${APP_NAME}"

# Gemini API設定
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TIMEOUT=60
GEMINI_MAX_RETRIES=3

# キャッシュ設定（さくらサーバーではファイルキャッシュが推奨）
CACHE_STORE=file
CACHE_PREFIX=

# キュードライバー（さくらサーバーでは同期処理が推奨）
QUEUE_CONNECTION=sync

# ファイルストレージ
FILESYSTEM_DISK=local
